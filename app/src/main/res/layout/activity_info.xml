<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/info_activity_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="48dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/info_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:elevation="0dp"
        android:paddingTop="24dp"
        android:title=""/>

    <android.support.v7.widget.CardView
        android:id="@+id/infocard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@anim/raise"
        android:layout_below="@+id/info_activity_toolbar"
        android:layout_centerInParent="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="16dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/icon_card"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_margin="20dp"
                        android:src="@mipmap/ic_launcher"/>

                    <TextView
                        android:id="@+id/text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@+id/image1"
                        android:text="@string/app_name"
                        android:textColor="@color/grey700"
                        android:textSize="30sp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="doesNothing"
                        android:padding="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_info_outline_grey_700_48dp"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/image2">

                                <TextView
                                    android:id="@+id/text_view1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:text="@string/version"
                                    android:textColor="@color/grey700"
                                    android:textSize="20sp"/>

                                <TextView
                                    android:id="@+id/text_view2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/text_view1"
                                    android:layout_margin="3dp"
                                    android:textColor="@color/grey"
                                    android:textSize="12sp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="ContactMeClicked"
                        android:padding="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_account_circle_grey_700_48dp"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/image3">

                                <TextView
                                    android:id="@+id/text_view3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:text="@string/developer"
                                    android:textColor="@color/grey700"
                                    android:textSize="20sp"/>

                                <TextView
                                    android:id="@+id/text_view4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/text_view3"
                                    android:layout_margin="3dp"
                                    android:text="@string/developer_name"
                                    android:textColor="@color/grey"
                                    android:textSize="12sp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="doesNothing"
                        android:padding="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_language_grey_700_48dp"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/image4">

                                <TextView
                                    android:id="@+id/text_view5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:text="@string/supported_languages"
                                    android:textColor="@color/grey700"
                                    android:textSize="20sp"/>

                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/text_view5"
                                    android:overScrollMode="never"
                                    android:scrollbars="none">

                                    <TextView
                                        android:id="@+id/text_view6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:paddingEnd="10dp"
                                        android:text="@string/english_german"
                                        android:textColor="@color/grey"
                                        android:textSize="12sp"/>
                                </HorizontalScrollView>
                            </RelativeLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="TranslatorsClicked"
                        android:padding="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image8"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_translate_black_48dp"
                                android:tint="@color/grey700"/>

                            <TextView
                                android:id="@+id/text_view10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:layout_toEndOf="@+id/image8"
                                android:text="@string/translators"
                                android:textColor="@color/grey700"
                                android:textSize="20sp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="LicencesClicked"
                        android:padding="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image5"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_description_grey_700_48dp"/>

                            <TextView
                                android:id="@+id/text_view7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:layout_toEndOf="@+id/image5"
                                android:text="Legal Notices"
                                android:textColor="@color/grey700"
                                android:textSize="20sp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="reportBugButtonClicked"
                        android:padding="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image6"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_bug_report_grey_700_48dp"/>

                            <TextView
                                android:id="@+id/text_view8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:layout_toEndOf="@+id/image6"
                                android:text="@string/report_a_bug"
                                android:textColor="@color/grey700"
                                android:textSize="20sp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="shareApp"
                        android:padding="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image7"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:layout_margin="15dp"
                                android:tint="@color/grey700"
                                android:src="@drawable/ic_share_white_48dp"/>

                            <TextView
                                android:id="@+id/text_view9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:layout_toEndOf="@+id/image7"
                                android:text="@string/share_app"
                                android:textColor="@color/grey700"
                                android:textSize="20sp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
